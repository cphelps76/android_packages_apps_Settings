<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/overscan_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        style="@android:style/Theme.DeviceDefault.Dialog">

    <TextView
            android:id="@+id/widthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="@string/overscan_seekbar_width_text"
            />

    <NumberPicker
        android:id="@+id/width_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/widthText"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusRight="@+id/height_picker"/>

    <TextView
            android:id="@+id/heightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:layout_below="@id/width_picker"
            android:text="@string/overscan_seekbar_height_text"
            />

    <NumberPicker
            android:id="@id/height_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/heightText"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/width_picker"/>



</RelativeLayout>